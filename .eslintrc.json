{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi" : ["warn", "always"],
        "quotes" : ["error", "single"],
        "max-len": ["error", { "code": 100 }],
        "indent": ["off"]
    }
}
